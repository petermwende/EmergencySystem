        android:layout_marginEnd="231dp"
        android:layout_marginBottom="176dp"
        android:text="SMS"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
